DJANGO_SECRET_KEY=change-me
DJANGO_DEBUG=true
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/english_phrase

# CORS設定（カンマ区切りで複数のオリジンを指定可能）
# 開発環境: localhost URLs
# 本番環境: 実際のフロントエンドURLを設定（例: https://app.example.com）
CORS_ALLOWED_ORIGINS=http://localhost:19006,http://localhost:8081
CSRF_TRUSTED_ORIGINS=http://localhost:8000




# Cloudflare R2設定
R2_SIGNED_URL_TTL=600
R2_PUBLIC_BASE_URL=https://your-r2-bucket.r2.dev
R2_ACCESS_KEY=your-r2-access-key-here
R2_SECRET_KEY=your-r2-secret-key-here
R2_BUCKET_NAME=your-bucket-name
R2_SIGNING_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com




# Email Configuration (SendGrid)
# Get your API key from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=your-sendgrid-api-key-here
DEFAULT_FROM_EMAIL=noreply@eitango.club
FRONTEND_URL=http://localhost:8081

# Deep Link scheme for mobile app (Expo)
# Just the scheme name, without ://
APP_DEEP_LINK_SCHEME=eitango

# Gmail SMTP fallback (for development, if SendGrid is not configured)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

# Google OAuth Configuration
# Get your Client IDs from Google Cloud Console:
# https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID_IOS=your-ios-client-id.apps.googleusercontent.com